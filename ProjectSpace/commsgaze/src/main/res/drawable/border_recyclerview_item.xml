<?xml version="1.0" encoding="UTF-8"?>
<!-- Idea of using a custom border for linear layout from https://stackoverflow.com/questions/15111402/how-can-i-create-a-border-around-an-android-linearlayout/15111515-->
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <solid android:color="@color/colorLightBlue" />
    <padding android:left="10dp" android:right="10dp" android:top="10dp" android:bottom="10dp"/>
    <stroke android:width="1dp" android:color="#000000"/>
    <corners android:radius="15dp"/>
</shape>