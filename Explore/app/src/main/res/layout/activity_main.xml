<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainCoordinatorLayout"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
     >

        <Button
            android:id="@+id/facialControllerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startFaceEvent"
            android:text="@string/face_event"
          android:layout_margin="30dp"
            />

        <Button
            android:id="@+id/eyeGazeColorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startEyeGazeBlob"
            android:text="@string/eye_gaze_blob"
            android:layout_margin="30dp"/>

        <Button
            android:id="@+id/eyeGazeShapeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startEyeGazeShape"
            android:text="@string/eye_gaze_shape"
            android:layout_margin="30dp"/>
        <Button
            android:id="@+id/eyeGazeMaxAreaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startEyeGazeMaxArea"
            android:text="@string/eye_gaze_max_area"
            android:layout_margin="30dp"/>

        <Button
            android:id="@+id/eyeGazeSparseOpticalFlowButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startEyeGazeSparseOpticalFlow"
            android:text="@string/eye_gaze_sparse_optical_flow"
            android:layout_margin="30dp"/>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>